<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/l"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_controller_number"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Blue" />

            <EditText
                android:id="@+id/etNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:background="#262626"
                android:height="35dp"
                android:inputType="phone"
                android:padding="2dp"
                android:text="test123"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_time_range"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Blue" />

        <Spinner
            android:id="@+id/spTimeRange"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="#262626"
            android:height="35dp"
            android:padding="2dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="15dp" >

            <Button
                android:id="@+id/btSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btReset"
                android:layout_weight="2.32"
                android:background="@drawable/custom_details_button_rs"
                android:padding="15sp"
                android:text="Save"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="#F7F7F7" />

            <Button
                android:id="@+id/btReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cctv_camera_live_stream_caputrebutton"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="2.50"
                android:background="@drawable/custom_details_button_rs"
                android:padding="15sp"
                android:text="Reset"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="#F7F7F7" />
        </RelativeLayout>

       
    </LinearLayout>

</RelativeLayout>